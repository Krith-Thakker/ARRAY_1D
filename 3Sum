#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
vector<vector<int>> threeSum(vector<int> v){
  vector<vector<int>> ans ;
  sort(v.begin(),v.end());
for(int i=0;i<v.size();i++){
  int j=i+1;
  int k= v.size()-1;
  while(j<k){
    int sum = v[j]+v[k];
    if(sum==v[i]){
      // v.push_back()
      vector<int> triplet={v[i],v[j],v[k]};
      ans.push_back(triplet);
    }
    else if(sum<v[i]){
      j++;
    }
    else{
      k--;
    }
  }
  while (i + 1 < v.size() && v[i + 1] == v[i]) 
    i++;
}
  return ans;
}
