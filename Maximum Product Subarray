#include<iostream>
#include<vector>
#include<climits>
using namespace std;
// int maxProduct(vector<int>& nums) {
    class Solution {
public:
    int maxProduct(vector<int>& nums) {
        int maximum_element = INT_MIN;
        int product=1;
// step1)
    // sabse pehle traverse karo and product*arr[i] karte raho and uske baad compare karo product and maximum element se and jo bada usko maximum element bana do.
        for(int i=0;i<nums.size();i++)
        {
          product*=nums[i];
          maximum_element=max(product,maximum_element);
          if(product==0){
           product=1;
          }
        }
    // step2) 
    // ab uss arr ko ulta teaverse karo and same hi karo jese pehle kiya tha array ke saath 
        product=1;
    
        for(int i=nums.size()-1;i>=0;i--)
        {
          product*=nums[i];

          maximum_element=max(product,maximum_element);
          if(product==0)
           product=1;
        }
        return maximum_element;

    }
};
